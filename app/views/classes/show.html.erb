<div> <h1> <%= @group.title %></h1> </div>
<h3>Current Students: </h3>
<% students = Student.where(group_id: "#{params[:id]}") %>

<% students.reverse_each do |student| %>
        <div class="panel panel-default">
            <div class="panel-heading">Firstname: <%= student.forename %></div>
            <div class="panel-body">Surname: <%= student.surname%></div>
            <div class="panel-body"> Predicted Grade: <%= student.grade_predicted%></div>
            <div class="panel-heading">
                  <footer>
                        <span><%= "Created: #{student.updated_at}" %></span>
                        <span>   |   <%= link_to "Delete student", student_path(student), method: :delete, data: {confirm: "Are you very sure you want to delete this student? "} %> </span>
                        <%= button_to "delete", student, :method => "delete" %>
                    
                  </footer>
            </div>
          
        </div>
          <% end %>

        



<%= render partial: '/classes/student_form' , :locals => {:classes_id => params[:id], :student => @student} %>


