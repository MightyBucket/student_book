
<div class="container">
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <div class="login-panel panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Sign Up</h3>
                </div>
                <div class="panel-body">

                

                    <%= form_for(@user) do |f|%>
                        <% if @user.errors.any? %>
                            <p>The form contains <%= pluralize(@user.errors.count, "error") %> </p>
                            <ul>
                            <% @user.errors.full_messages.each do | message | %>
                                <li><%= message %></li>
                            <% end %>
                            </ul>
                        <% end %>

               
                        <div class="form-group">
                            <%= f.text_field(:name, class: "form-control", placeholder:"Name" ) %>
                        </div>
            
                        <div class="form-group">
                            <%= f.email_field(:email, class: "form-control", placeholder:"Email") %>
                        </div>
                       
                        <div class="form-group">
                            <%= f.password_field(:password, class: "form-control",placeholder:"Password") %>
                        </div>
                     
                        <p>
                            <%= f.password_field(:password_confirmation, class: "form-control",placeholder:"Confirm Password") %>
                        </p>
                         <div class="checkbox">
                            <label>
                                <input name="remember" type="checkbox" value="Remember Me">Remember Me
                            </label>
                        </div>
                        <div>
                        
                            <span><%= f.submit 'Sign Up' , class: "btn btn-lg btn-success btn-block" %></span>
                        </div>
                    <% end %>
                    <span><%=  link_to "Close", "javascript:history.back()" , :class => 'btn btn-default' %></span>
                   <span> <%= link_to "Log in",login_path,:class=>"btn btn-md btn-primary "%></span>
                </div>

            </div>
     
       
        </div>
    </div>
</div>