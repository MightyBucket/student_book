
<%= link_to "New file", new_user_file_path, class: "btn btn-primary" %>

<table class = "table table-bordered table-striped">
   <thead>.
      <tr>
         <th>Name</th>
         <th>Download Link</th>
         <th> Image Preview <th>
         <th> </th>
      </tr>
   </thead>
   
   <tbody>
      <% @user_files.each do |user_file| %>
         
         <tr>
            <td><%= user_file.name %></td>
            <td><%= link_to "Download File", user_file.attachment_url %></td>
            <td><img src= '<%=user_file.attachment_url %>' style= "width: 100px;"/> </td>
            <td><%= button_to "Delete",  user_file, method: :delete, class: "btn btn-danger", confirm: "Are you sure that you wish to delete #{user_file.name}?" %></td>
         </tr>
         
      <% end %>
   </tbody>
   
</table>