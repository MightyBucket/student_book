
<%= link_to "New file", new_user_file_path, class: "btn btn-primary" %>

<table class = "table table-bordered table-striped">
   <thead>.
      <tr>
         <th>Name</th>
         <th>Download Link</th>
         <th> Image Preview <th>
         <th> </th>
      </tr>
   </thead>
   
   <tbody>
      <% @user_files.each do |user_file| %>
         
         <tr>
            <td><%= user_file.name %></td>
            <td><%= link_to "Download File", user_file.attachment_url %></td>
            <td><img src= '<%=user_file.attachment_url %>' style= "width: 100px;"/> </td>
            <td><%= button_to "Delete",  user_file, method: :delete, class: "btn btn-danger", confirm: "Are you sure that you wish to delete #{user_file.name}?" %></td>
         </tr>
         
      <% end %>
   </tbody>
   
</table>

<div class="col-md-4 col-md-offset-4">
<div class= "well"
    <div class="container">
        <div class="row">
            
      			
					   <%= form_for @user_file, html: { multipart: true } do |f| %>
					      <%= f.label :name %>
					      <%= f.text_field :name %>
					      <%= f.label "Class name / Student Name" %>
					      <%= f.text_field :name %>
					      <%= f.label :attachment %>
					      <%= f.file_field :attachment %>
					      <%= f.submit "Save", class: "btn btn-primary" %>
					   <% end %>
			</div>
        </div>
    </div>
</div>