<div class= "container" > 
<h1> Dashboard</h1>



<% classes = Group.all%>
<% classes.each do |classes| %>
    <div class="col-lg-4 col-md-6 col-xs-12 " onclick="location.href='/groups/<%=classes.id%>';" style="cursor: pointer;">
        <div class="panel panel-green">
            <div class="panel-heading">
                <div class="row">
                    <div class="col-xs-3">
                        <i class="fa fa-tasks fa-5x"></i>
                    </div>
                    <div class="col-xs-9 text-right">
                    <div class="panel-heading"><%= classes.title %></div>
        
                    </div>
                </div>
            </div>
    <a href="#">
        <div class="panel-footer">
            <span class="pull-left">View Details</span>
            <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
            <div class="clearfix"></div>
        </div>
    </a>
</div>



                  <footer>
                        <span><%= "Created: #{classes.updated_at}" %></span>
              
                                    <span>   |   <%= link_to "Delete Class", group_path(classes.id), method: :delete, data: {confirm: "Are you very sure you want to delete this classes? "} %> </span>
                    
                  </footer>
            </div>
          
        </div>
          <% end %>



<div id="item" visibility="hidden"><%= render "new_class" %></div>

<script>

$( "#button" ).click(function() {
$( "#item" ).toggle();
});
</script>

