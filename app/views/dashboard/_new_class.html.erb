<%= form_for @classes , :url => groups_path do |f| %>
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <div class="login-panel panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">Enter Class Details </h3>
        </div>
        <div class="panel-body">
          <p><%= f.text_field (:title) , class: "form-control", placeholder:"Enter Class Name: "  %></p>
        </div>
        <div class="modal-footer">
          <div class="modal-title">
        </div>    
        <span><%=  link_to "Close", "#" , :class => 'btn btn-default' %></span>
        <span><%= f.submit nil, :class => "btn btn-success" %></span>
      </div>
    </div>
  </div>
<% end %>