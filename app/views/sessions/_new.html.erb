    <div class="container">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <div class="login-panel panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">Please Sign In</h3>
                    </div>
                    <div class="panel-body">
                    

                        <%= form_tag(login_path) do %>
                        
                            <p>
                                <%= label_tag(:email) %>
                            </p>
                            <div class="form-group">
                                <%= text_field_tag(:email ,nil, class: "form-control", placeholder:"E-mail", name:"email", type:"email" ) %>
                            </div>
                            <p>
                                <%= label_tag(:password) %>
                            </p>
                            <div class="form-group">
                                <%= password_field_tag("pass",nil, class: "form-control",placeholder:"Password",name:"password",type:"password",value:"") %>
                            </div>
                             <div class="checkbox">
                                <label>
                                    <input name="remember" type="checkbox" value="Remember Me">Remember Me
                                </label>
                            </div>
                            <div>
                                <%= submit_tag nil,class:"btn btn-lg btn-success btn-block", value:"Log In" %>
                            </div>
                        <% end %>
                       
                    </div>

                </div>
                <div>
                    <%= link_to "Sign Up",new_user_path,:class=>"btn btn-lg btn-primary btn-block"%>
                </div>
           
            </div>
        </div>
    </div>